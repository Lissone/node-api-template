{
  "name": "simple-node-api-template",
  "version": "1.0.0",
  "main": "src/server.ts",
  "description": "Simple CRUD node api template with mongodb",
  "repository": "https://github.com/Lissone/simple-api-mongodb.git",
  "author": "Leonardo Dias Lissone Santomero <leonardo.lissonez@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon -r tsconfig-paths/register src/external/server.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn pretty-quick --staged",
      "yarn eslint --fix src --ext .ts"
    ]
  },
  "dependencies": {
    "@types/node": "^14.14.37",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.12.2",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-import-helpers": "^1.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.0.3",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.2",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  }
}
