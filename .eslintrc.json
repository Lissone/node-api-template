{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": [
		"plugin:@typescript-eslint/recommended",
		"airbnb-base",
		"eslint-config-prettier",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"prettier"
	],
	"rules": {
		"prettier/prettier": ["error", {
			"usePrettierrc": false,
			// "parser": "flow",
			"semi": false,
			"singleQuote": true,
			"trailingComma": "none",
			"tabWidth": 2,
			"arrowParens": "avoid",
			"endOfLine": "auto"
		}],
		"class-methods-use-this": "off",
		"no-unused-vars": "off",
		"import/prefer-default-export": "off",
		"import/no-unresolved": "off",
		"import/order": "off",
		"import/extensions": ["error",
      {
        "ts": "never"
      }
   	]
	}
}
